{
    "name": "De-distract myself",
    "description": "Block certain pages!",
    "version": "3.0",
    "manifest_version": 3,

    "action": {},
    "permissions": [
        "declarativeNetRequest",
        "declarativeNetRequestFeedback",
        "declarativeNetRequestWithHostAccess",
        "activeTab",
        "scripting",
        "debugger"
    ],
    "host_permissions": [
        "http://*/",
        "https://*/"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "declarative_net_request" : {
        "rule_resources" : [{
            "id": "ruleset_1",
            "enabled": true,
            "path": "rules.json"
        }]
    }
}
